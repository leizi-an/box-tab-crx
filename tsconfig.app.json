{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "traceResolution": true,
    "composite": true,
    "noEmit": true,
    "noImplicitThis": false,
    "baseUrl": ".",
    "types": ["element-plus/global", "@types/chrome"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
